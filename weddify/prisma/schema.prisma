
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  events    Event[]
}

model Event {
  id         Int      @id @default(autoincrement())
  name       String
  date       DateTime
  location   String
  attendees  Int
  userId     Int
  user       User     @relation(fields: [userId], references: [id])
  guests     Guest[]
  message    String?  // Optional string
  headerText String?  // Optional string
  footerText String?  // Optional string
}

model Guest {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  eventId   Int
  howMany   Int      // Ensure this field exists and is of type Int
  event     Event    @relation(fields: [eventId], references: [id])
}


